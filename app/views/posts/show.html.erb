<div class="post">
<div class="post__title">
<h1><%= @post.title%></h1>
</div>
<%= @post.content %>
<br />
<% if session[:user_id] == @post.user_id %>
<a href="/posts/<%= @post.id %>/edit"><button class="button">Edit</button></a>
<% end %>

</div>
<div class="commentBox">
    <%= form_for @comment, :url => "/posts/#{@post.id}/comments" do |f| %>
    <%= f.text_area :content %>
    <%= f.hidden_field :post_id, :value => @post.id %>
    <%= f.hidden_field :user_id, :value => @current_user.id %>
    <br />
    <%= submit_tag("Comment") %>
<% end %>
</div>


<div class="commentsBox">

<h2>Comments <span class="commentsButton">&darr;</span></h2>

<ul class="commentsList">

<% @comments.each do |c| %>
<li class="commentsItem"><%= c.content %></li>
<% end %>

</ul>
</div>


